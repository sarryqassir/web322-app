<div class="row">
    <div class="col-md-12">
          <h2>Posts</h2>
          <hr />
          <table class="table">
            <thead>
              <tr>
                <th>Post ID</th>
                <th>Title</th>
                <th>Post Date</th>
                <th>Category</th>
                <th>Published</th>
              </tr>
            </thead>
        <tbody>   
            {{#each posts}}
              <tr>
                <td>{{id}}</td>
                <td>{{title}}</td>
                <td>{{postDate}}</td>
                <td>{{#navLink (createURL "/posts?category=" category)}}
                    {{category}}{{/navLink}}</td>
                <td>{{published}}</td>
              </tr>
            {{/each}}
        </tbody>
        
        </table>
    </div>
    {{#unless posts}}
    <div class="col-md-12 text-center">
      <strong>{{message}}</strong>
    </div>
    {{/unless}}
</div>
