<div class="row">
  <section class="main col-md-9">
    {{#if data.post}}
    <article>
      
      <h2>{{data.post.title}}</h2>
      <img
        src={{data.post.featureImage}}
        alt="feature Image"
        style="width:100%"
      />

      {{#safeHTML data.post.body}}{{/safeHTML}}
      <br />
      <strong>Category:</strong>
      {{data.post.category}}
      <br />
      <strong>Last Updated:</strong>
      {{data.post.postDate}}

    </article>
    {{else}} 
    <div class="col-md-12 text-center">
    <h2>{{data.message}}</h2>
    <p>Please try another Post / Category</p>
    
</div>
{{/if}}

     </section>
     <aside class="col-md-3">
     <br /><br />

    {{#if data.posts}}
      <h4>Posts</h4>
      {{#each data.posts}}
        {{#navLink
          (categoryURL (createURL "/blog/" id) ../viewingCategory)
        }}{{title}}{{/navLink}}
      {{/each}}
    {{/if}}

    <ul class="list-group">
      {{#if data.categories}}
        <h4>Categories</h4>
        {{#each data.categories}}
          {{#navLink (createURL "/blog?category=" id)}}{{category}}{{/navLink}}
        {{/each}}
      {{/if}}
    </ul>
  </aside>
</div>